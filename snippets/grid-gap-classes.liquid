{%- liquid
  assign include_y = true
  if exclude_y
    assign include_y = false
  endif
  if settings.grid_desktop_vertical_spacing == 0 and settings.grid_desktop_horizontal_spacing == 0 and settings.card_style == 'card' and include_y
    assign gap_class = 'grid--no-gap grid--no-x-gap grid--no-y-gap'
  elsif settings.grid_desktop_horizontal_spacing == 0
    assign gap_class = 'grid--no-gap grid--no-x-gap'
  elsif settings.grid_desktop_vertical_spacing == 0 and settings.card_style == 'card' and include_y
    assign gap_class = 'grid--no-gap grid--no-y-gap'
  endif

  if settings.grid_mobile_vertical_spacing == 0 and settings.grid_mobile_horizontal_spacing == 0 and settings.card_style == 'card' and include_y
    assign gap_class_mobile = 'grid--no-gap-mobile grid--no-x-gap-mobile grid--no-y-gap-mobile'
  elsif settings.grid_mobile_horizontal_spacing == 0
    assign gap_class_mobile = 'grid--no-gap-mobile grid--no-x-gap-mobile'
  elsif settings.grid_mobile_vertical_spacing == 0 and settings.card_style == 'card' and include_y
    assign gap_class_mobile = 'grid--no-gap-mobile grid--no-y-gap-mobile'
  endif
-%}
{{ gap_class }} {{ gap_class_mobile }}
